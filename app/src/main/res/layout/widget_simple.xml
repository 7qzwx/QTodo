<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9">

    <!-- 标题行 -->
    <LinearLayout 
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="#81C784"
        android:padding="8dp"
        android:elevation="2dp">
        
        <!-- 设置按钮 -->
        <ImageView
            android:id="@+id/widget_btn_settings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_manage"
            android:tint="#FFFFFF" />
            
        <!-- 标题 -->
        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="QTodo待办清单"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center" />
            
        <!-- 刷新按钮 -->
        <ImageView
            android:id="@+id/widget_btn_refresh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_popup_sync"
            android:tint="#FFFFFF" />
    </LinearLayout>

    <!-- 底部已完成待办信息栏 -->
    <LinearLayout
        android:id="@+id/widget_completed_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/widget_todo_count"
        android:orientation="vertical"
        android:background="#DBEFDC"
        android:padding="8dp">
        
        <!-- 已完成标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今日已完成"
            android:textSize="12sp"
            android:textColor="#388E3C"
            android:textStyle="italic" />
            
        <!-- 已完成项目1 -->
        <LinearLayout
            android:id="@+id/completed_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:visibility="gone">
            
            <!-- 圆点指示器 -->
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/radiobutton_on_background"
                android:tint="#8BC34A" />
                
            <!-- 已完成文本 -->
            <TextView
                android:id="@+id/completed_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已完成项目1"
                android:textSize="12sp"
                android:textColor="#757575"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
            
        <!-- 已完成项目2 -->
        <LinearLayout
            android:id="@+id/completed_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:visibility="gone">
            
            <!-- 圆点指示器 -->
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/radiobutton_on_background"
                android:tint="#8BC34A" />
                
            <!-- 已完成文本 -->
            <TextView
                android:id="@+id/completed_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已完成项目2"
                android:textSize="12sp"
                android:textColor="#757575"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
            
        <!-- 无已完成项目提示 -->
        <TextView
            android:id="@+id/no_completed_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暂无已完成事项"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:paddingTop="4dp"
            android:paddingStart="12dp" />
    </LinearLayout>

    <!-- 底部计数 - 居中显示 -->
    <TextView
        android:id="@+id/widget_todo_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="0/0 项待办事项"
        android:textSize="12sp"
        android:textColor="#2E7D32"
        android:gravity="center"
        android:padding="8dp"
        android:background="#C8E6C9" />

    <!-- 待办事项列表 -->
    <ListView
        android:id="@+id/todo_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widget_header"
        android:layout_above="@id/widget_completed_bar"
        android:divider="#AACFD8DC"
        android:dividerHeight="1dp"
        android:background="#F1F8E9" />
        
    <!-- 空状态视图 -->
    <RelativeLayout
        android:id="@+id/widget_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widget_header"
        android:layout_above="@id/widget_completed_bar"
        android:background="#F1F8E9">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:tint="#81C784"
                android:alpha="0.7" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无待办事项"
                android:textSize="14sp"
                android:textColor="#689F38"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>